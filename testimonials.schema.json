{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Testimonials Response Schema",
    "type": "object",
    "required": ["testimonials"],
    "properties": {
      "testimonials": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["id", "quote", "author", "job_title", "company"],
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1
            },
            "quote": {
              "type": "string",
              "minLength": 1
            },
            "author": {
              "type": "string",
              "minLength": 1
            },
            "job_title": {
              "type": "string",
              "minLength": 1
            },
            "company": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }