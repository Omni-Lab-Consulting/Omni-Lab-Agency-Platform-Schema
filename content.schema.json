{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Content Response Schema",
    "type": "object",
    "required": ["content"],
    "properties": {
      "content": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["id", "content", "description", "url"],
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1
            },
            "content": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }