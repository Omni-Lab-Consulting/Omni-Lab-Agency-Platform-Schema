{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Capabilities Response Schema",
    "type": "object",
    "required": ["capabilities"],
    "properties": {
      "capabilities": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["id", "capability", "description"],
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 1
            },
            "capability": {
              "type": "string",
              "minLength": 1
            },
            "description": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }